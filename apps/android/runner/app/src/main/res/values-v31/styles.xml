<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="alertDialogTheme">@style/AlertDialog</item>
        <item name="android:windowBackground">@color/color_primary_dark</item>
        <item name="android:windowSplashScreenBackground">@color/color_primary</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/ic_logo_splash</item>
        <item name="android:windowSplashScreenAnimationDuration">1000</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="alertDialogTheme">@style/AlertDialog</item>
        <item name="android:windowBackground">@color/color_primary_dark</item>
        <item name="android:windowSplashScreenBackground">@color/color_primary</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/ic_logo_splash</item>
        <item name="android:windowSplashScreenAnimationDuration">1000</item>
    </style>

</resources>
